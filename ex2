<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multiples of 3 or 5</title>
</head>
<body>

    <p>Click the button to find the sum of all multiples of 3 or 5 below 1000:</p>
    
    <!-- Button that triggers the calculation -->
    <button onclick="doIt()">Press me!</button>

    <script>
        // Function that runs when the button is clicked
        function doIt() {
            let sum = 0; // Variable to store the sum of multiples
            
            // Loop through all numbers below 1000
            for (let i = 0; i < 1000; i++) {
                // Check if the number is a multiple of 3 or 5
                if (i % 3 === 0 || i % 5 === 0) {
                    sum += i; // Add the multiple to the sum
                }
            }

            // Alert the user with the final sum
            alert("The sum of all multiples of 3 or 5 below 1000 is: " + sum);
        }
    </script>

</body>
</html>
